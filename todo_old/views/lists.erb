<ul id="lists">
  <% sorted_lists.each_with_index do |list, idx| %>
    <li class=<%= all_todos_complete?(list) ? "complete" : "" %>>
      <a href=<%= "/lists/#{idx}" %>>
        <h2><%= list[:name] %></h2>
        <p><%= todos_complete(list) %> / <%= list[:todos].size %></p>
      </a>  
    </li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <a class="add" href="/lists/new">New list</a>
<% end %>